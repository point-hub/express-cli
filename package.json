{
  "name": "@point-hub/express-cli",
  "version": "0.0.4",
  "description": "Express command line interface wrapper",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "dev": "rimraf lib && tsc -w --project tsconfig.dev.json",
    "build": "rimraf lib && tsc --project tsconfig.build.json",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "rimraf coverage && jest --coverage"
  },
  "keywords": [
    "express",
    "cli",
    "wrapper"
  ],
  "author": "Martien Dermawan Tanama <martiendt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/point-hub/express-cli.git"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.3.0"
  }
}
